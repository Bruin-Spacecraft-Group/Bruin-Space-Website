---
import TeamMemberCard from './TeamMemberCard.astro';

interface Member {
  name: string;
  role: string;
  image: string;
}

interface Props {
  title?: string;
  groups: Member[][]; 
}

const { title = "Leadership", groups } = Astro.props;
---

<section class="py-32 bg-neutral-950 border-t border-white/10 relative z-20 overflow-hidden">
    
    <div class="absolute top-0 right-0 -translate-y-1/3 translate-x-1/3 w-[800px] h-[800px] bg-blue-600/10 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 translate-y-1/3 -translate-x-1/3 w-[600px] h-[600px] bg-indigo-900/10 rounded-full blur-[100px] pointer-events-none"></div>

    <div class="container mx-auto px-4 relative z-10">

        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">{title}</h2>
            <div class="h-1 w-20 bg-blue-600 mx-auto rounded-full mb-8"></div>
        </div>

        <div class="flex flex-col gap-12">
            {groups.map((group) => (
                <div class="flex flex-wrap justify-center gap-6 md:gap-8">
                    {group.map((member) => (
                        <TeamMemberCard 
                            name={member.name}
                            role={member.role}
                            image={member.image}
                        />
                    ))}
                </div>
            ))}
        </div>

    </div>
</section>